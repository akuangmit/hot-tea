<!-- Modal Structure -->
<div id="loginModal" class="modal">
  <div class="modal-content">
    <div class="row">
      <h4 class="modalTitle modalTop col s10 l11">Restaurant Log In</h4>
      <button href="#!" class="modalTop Topmodal-action modal-close waves-effect waves-light btn-flat col s2 l1" style="float: right"><i class="material-icons">close</i></button>
    </div>
    <div class="row modalText">
      <form id="loginmodalform" class="col s12" method="post" action="/loginuser">
        <div class="row modal-form-row">
          <div class="input-field col s12">
            <input id="login_email_address" type="email" class="validate" required="" aria-required="true" name="username">
            <label for="login_email_address" data-error="Please enter a valid email address.">Email Address</label>
          </div>
        </div>
        <div class="row modalText">
          <div class="input-field col s12">
            <input id="login_password" type="password" class="validate" required="" aria-required="true" name="password">
            <label for="login_password">Password</label>
          </div>
        </div>  
        <div class="row">
          <a href="#signupModal" type="submit" class="modal-action modal-close waves-effect waves-light btn-flat modalPseudoFooter col s12 m5 offset-m4 l4 offset-l6 center-align">New User? Sign Up!</a>
          <button href="#!" class="modal-action deep-orange lighten-3 waves-effect waves-light btn-flat modalPseudoFooter login_submit col s12 m3 l2 center-align" style="color: white">Log in</button>
        </div>
      </form>
    </div>
  </div>
</div>



