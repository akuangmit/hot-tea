<!-- Modal Structure -->
<div id="loginModal" class="modal">
  <div class="modal-content">
    <h4 class="modalTitle">Restaurant Log In</h4>

    <div class="row modalText">
      <form id="loginmodalform" class="col s12" method="post" action="/loginuser">
        <div class="row modal-form-row">
          <div class="input-field col s6">
            <input id="login_email_address" type="email" class="validate" required="" aria-required="true" name="username">
            <label for="login_email_address" data-error="Please enter a valid email address.">Email Address</label>
          </div>
        </div>
        <div class="row modalText">
          <div class="input-field col s12">
            <input id="login_password" type="password" class="validate" required="" aria-required="true" name="password">
            <label for="login_password">Password</label>
          </div>
        </div>  

        <button href="#!" type="submit" class="modal-action deep-orange lighten-3 waves-effect waves-light btn-flat modalPseudoFooter login_submit" style="float: right; color: white">Log in</button>
      </form>
    </div>
  </div>
</div>