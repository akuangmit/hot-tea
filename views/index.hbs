        <!-- couldn't figure out how to put log in button here; i think it has to be placed within the form. 

        figure out a way to get rid of extra space -->
        <!--  </div> -->
      </div>
    </li>

    <!-- <li><a href="/signupform">Sign Up</a></li> -->
    <li><!-- Modal Trigger -->
        <a class="waves-effect waves-light" href="#signupModal">Restaurant Sign Up</a>

        <!-- Modal Structure -->
        <div id="signupModal" class="modal">
          <div class="modal-content">
            <h4 class="modalTitle">Restaurant Sign Up</h4>

            <div class="row modalText">
              <form class="col s12" method="post" action="/adduser">
                <div class="row modal-form-row">
                  <div class="input-field col s12">
                   <input id="restaurant_name" type="text" class="validate" name="username">
                    <label for="restaurant_name">Restaurant Name</label>
                  </div>
                </div>
                <div class="row modalText">
                  <div class="input-field col s12">
                    <input id="password" type="text" class="validate" name="password">
                    <label for="password">Password</label>
                  </div>
                </div>
                <button href="#!" type="submit" class="modal-action modal-close deep-orange lighten-3 waves-effect waves-light btn-flat modalPseudoFooter" style="float: right; color: white">Sign Up</button>    
              </form>
            </div>
          </div>
</div></li>
    {{/if}}
  </ul>
</div>
</nav>
<div class="parallax-container">
  <div class="topcontent index">
    <div class="parallax toppic"><img src="../images/restaurant.jpg">
      <nav id="searchbar" class="deep-orange lighten-3">
        <div class="nav-wrapper">
          <form id="searchform">
            <div class="input-field">
              <input id="search" type="search" required>
              <label for="search"><i class="material-icons">search</i></label>
              <i class="material-icons">close</i>
            </div>
          </form>
        </div>
      </nav>
      <a class="deep-orange lighten-3 waves-effect waves-light btn-large button" href="/searchresults">Search!</a>
      <a class="deep-orange lighten-3 waves-effect waves-light btn-large button" href="/directory">View Restaurants by Wait Time</a>
      <p class="toptext"> Check restaurant wait times so that you can dine on your schedule. </p>
    </div>
  </div>
</div>

